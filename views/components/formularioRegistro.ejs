<form class="w-100 pb-5 mb-5" action="/inscriptos/new" method="POST">
  	<label class="pt-5" for="nombreinput" class="form-label">Nombre</label>
  	<input type="text" class="form-control formularioInput" required id="nombre" name="nombre" placeholder="Nombre">
  	<label class="pt-5" for="apellidoinput" class="form-label">Apellido</label>
  	<input type="text" class="form-control formularioInput" required id="apellido" name="apellido" placeholder="Apellido">
  	<label class="pt-5" for="emailinput" class="form-label">E-Mail</label>
  	<input type="email" class="form-control formularioInput" required id="mail" name="mail" placeholder="potenciarnos@email.com">
  	<label class="pt-5" for="telefonoinput" class="form-label">Celular <small>(sin 0 ni 15)</small></label>
  	<input type="number" class="form-control formularioInput" required id="celular" name="celular" placeholder="telefono">
  	<label class="pt-5" for="escuelaselect" class="form-label">Escuela</label>
	<select class="custom-select formularioInput" aria-label=".form-select-lg example" id="escuela" name="escuela"></label>
		<option selected hidden value="Otros">- Seleccione la escuela que cursa/representa - </option>
